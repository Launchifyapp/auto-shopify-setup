# Learn more about configuring your app at https://shopify.dev/docs/apps/tools/cli/configuration

# IMPORTANT: This is a template file. Copy it to shopify.app.toml and fill in your actual values.
# The shopify.app.toml file should NOT be committed to version control if it contains sensitive data.

client_id = "your_client_id_from_partner_dashboard"
name = "Your App Name"
application_url = "https://your-deployed-app-url.com"
embedded = true

[webhooks]
api_version = "2025-10"

  [[webhooks.subscriptions]]
  uri = "/api/webhooks/customers-data-request"
  compliance_topics = [ "customers/data_request" ]

  [[webhooks.subscriptions]]
  uri = "/api/webhooks/customers-redact"
  compliance_topics = [ "customers/redact" ]

  [[webhooks.subscriptions]]
  uri = "/api/webhooks/shop-redact"
  compliance_topics = [ "shop/redact" ]

[access_scopes]
# Learn more at https://shopify.dev/docs/apps/tools/cli/configuration#access_scopes
scopes = "read_files,write_files,read_metaobject_definitions,write_metaobject_definitions,read_metaobjects,write_metaobjects,read_online_store_navigation,write_online_store_navigation,write_online_store_pages,read_products,write_products,read_content,write_content,write_themes"
optional_scopes = [ ]
use_legacy_install_flow = false

[auth]
redirect_urls = [ "https://your-deployed-app-url.com/api/auth/callback" ]
